<div class="row col-lg-12 col-md-12 col-sm-12 gap-3 d-flex justify-content-center">


    @for (var i = 0; i <  Model.Count; i++)
    {
        var science = Model[i];

        <div class="card" style="width: 30%;box-shadow: 0 0rem 3rem rgba(8,7,16,0.6)!important;">
            <img src="/Image/A9.jpg" class="card-img-top" alt="RASM">
            <div class="card-body">
                <h4 class="card-title">Name: @science.Name</h4>


                <p class="card-text">Description: @science.Description</p>
                <p class="card-text">Users: @science.UserSciences?.Count</p>

                <a class="btn btn-primary" asp-action="GetById" asp-route-scienceId="@science.Id">View</a>
            </div>
        </div>
    }
</div>

<table class="table">
<thead>
<tr>
<th scope="col">#</th>
<th scope="col">Name</th>
<th scope="col">Description</th>
    <th scope="col">
        @{
            if (ViewBag.OrderByUsers)
            {
                <a class="btn btn-primary" asp-action="Index" asp-route-schoolId="@ViewBag.SchoolId" asp-route-orderByUsers="false">Users</a>
            }
            else
            {
                <a class="btn btn-light" asp-action="Index" asp-route-schoolId="@ViewBag.SchoolId" asp-route-orderByUsers="true">Users</a>
            }
        }
    </th>
    <th scope="col">View</th>
</tr>
</thead>
<tbody>

@for (var i = 0; i < Model?.Count; i++)
{  var science = Model[i];

    <tr>
        <th scope="row">@(i + 1)</th>
        <td>@science.Name</td>
        <td>@science.Description</td>
        <td>@science.UserSciences?.Count</td>
        <td>
            <a class="btn btn-primary" asp-action="GetById" asp-route-scienceId="@science.Id">View</a>
        </td>
    </tr>
}
</tbody>
</table>


